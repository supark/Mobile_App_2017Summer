<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gsu.httpcs.a2017summer.AnimatorActivity"
    android:orientation="vertical"
    >

        <Button
            android:id="@+id/anmator_bt_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="start"/>

        <TextView
            android:id="@+id/anmator_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Hello, Android!"
            android:padding="10dp"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/black"
            android:textSize="23sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/anmator_bt_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="stop"
            android:padding="10dp"/>


    <GridLayout
        android:id="@+id/anmator_bottom"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:columnCount="3"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/animator_trans"
            android:padding="10dp"
            android:layout_width="110dp"
            android:text="trans"
            android:gravity="center"/>

        <Button
            android:id="@+id/animator_scale"
            android:padding="10dp"
            android:layout_width="110dp"
            android:text="scale"
            android:gravity="center"/>

        <Button
            android:id="@+id/animator_color"
            android:padding="10dp"
            android:layout_width="110dp"
            android:text="color"
            android:gravity="center"/>
        <Button
            android:id="@+id/animator_char"
            android:padding="10dp"
            android:layout_width="110dp"
            android:text="char"
            android:gravity="center"/>
        <Button
            android:id="@+id/animator_alpha"
            android:padding="10dp"
            android:layout_width="110dp"
            android:text="alpha"
            android:gravity="center"/>
        <Button
            android:id="@+id/animator_rotation"
            android:padding="10dp"
            android:layout_width="110dp"
            android:text="roataion"
            android:gravity="center"/>

    </GridLayout>

</RelativeLayout>
