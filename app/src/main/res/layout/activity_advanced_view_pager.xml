<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gsu.httpcs.a2017summer.AdvancedViewPagerActivity"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/activity_advance_view_pager_tablayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"></android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/activity_advance_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></android.support.v4.view.ViewPager>
<!-- to occupy rest of height after 60dp above -> height="match_parent" -->

</LinearLayout>
